# Enable URL rewriting
RewriteEngine On

# API routing - redirect /api/* requests to api.php
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/(.*)$ api.php?path=$1 [QSA,L]

# Photos directory - serve directly if files exist
<Directory "photos">
    Options -Indexes
    AllowOverride None
    Require all granted
</Directory>

# Handle photos directory requests
RewriteCond %{REQUEST_URI} ^/photos/
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^photos/(.*)$ photos/$1 [L]

# Frontend routing - serve index.html for non-existing files (SPA support)
# BUT exclude photos and API directories from SPA routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/photos/
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^(.*)$ index.html [QSA,L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Cache static assets and photos
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    Header set Cache-Control "public, max-age=2592000"
</FilesMatch>