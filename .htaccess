# Enable URL rewriting
RewriteEngine On

# API routing - redirect /api/* requests to api.php
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/(.*)$ api.php?path=$1 [QSA,L]

# Photos directory - serve directly via symbolic link (ZERO PHP overhead!)
# Map /photos/* to /volume-photos/* for pure static serving by Apache
RewriteCond %{REQUEST_URI} ^/photos/(.+)$
RewriteCond %{DOCUMENT_ROOT}/volume-photos/%1 -f
RewriteRule ^photos/(.+)$ volume-photos/$1 [L]

# Handle default avatars via photos.php (only for non-existent files)
RewriteCond %{REQUEST_URI} ^/photos/default-(male|female)\.svg$
RewriteRule ^photos/(default-(?:male|female)\.svg)$ photos.php/$1 [L]

# Frontend routing - serve index.html for non-existing files (SPA support)
# BUT exclude photos and API directories from SPA routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/photos/
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^(.*)$ index.html [QSA,L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Cache static assets and photos
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    Header set Cache-Control "public, max-age=2592000"
</FilesMatch>

# Prevent directory browsing
Options -Indexes