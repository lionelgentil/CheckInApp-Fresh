# Enable URL rewriting
RewriteEngine On

# API routing - redirect /api/* requests to api.php
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/(.*)$ api.php?path=$1 [QSA,L]

# Photos directory - allow direct access, don't route to SPA
RewriteCond %{REQUEST_URI} ^/photos/
RewriteRule ^photos/(.*)$ photos/$1 [L]

# Frontend routing - serve index.html for non-existing files (SPA support)
# BUT exclude photos directory from SPA routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/photos/
RewriteRule ^(.*)$ index.html [QSA,L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Cache static assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
</FilesMatch>