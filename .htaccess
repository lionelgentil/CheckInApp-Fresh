# Enable URL rewriting
RewriteEngine On

# API routing - redirect /api/* requests to api.php
RewriteCond %{REQUEST_URI} ^/api/
RewriteRule ^api/(.*)$ api.php?path=$1 [QSA,L]

# Photos directory - serve directly if file exists, otherwise use API
RewriteCond %{REQUEST_URI} ^/photos/(.+)$
RewriteCond %{DOCUMENT_ROOT}/photos/%1 -f
RewriteRule ^photos/(.+)$ photos/$1 [L]

# Photo fallback - route to photos.php for missing files
RewriteCond %{REQUEST_URI} ^/photos/(.+\.(jpg|jpeg|png|webp|svg))$
RewriteCond %{DOCUMENT_ROOT}/photos/%1 !-f
RewriteRule ^photos/(.+)$ photos.php [QSA,L]

# Frontend routing - serve index.html for non-existing files (SPA support)
# BUT exclude photos and API directories from SPA routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/photos/
RewriteCond %{REQUEST_URI} !^/api/
RewriteRule ^(.*)$ index.html [QSA,L]

# Security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"

# Cache static assets and photos
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    Header set Cache-Control "public, max-age=2592000"
</FilesMatch>

# Prevent directory browsing
Options -Indexes